# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=your_endpoint_here
AZURE_OPENAI_API_KEY=your_api_key_here
AZURE_OPENAI_DEPLOYMENT_NAME=your_deployment_name_here
AZURE_OPENAI_API_VERSION=2024-02-01
AZURE_OPENAI_MODEL=gpt-4

# Server Configuration
WORKERS=4
TIMEOUT=180                    # Worker timeout in seconds (3 minutes for AI processing)
GRACEFUL_TIMEOUT=30           # Graceful shutdown timeout
KEEP_ALIVE=5                  # Keep-alive timeout
MAX_REQUESTS=1000             # Max requests per worker before restart
MAX_REQUESTS_JITTER=100       # Random jitter for max requests

# Optional: Force TCP mode instead of Unix socket
# PORT=8000

# Optional: Custom socket path
# SOCKET_PATH=/tmp/cpro.sock
